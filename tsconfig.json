{
  "extends": "expo/tsconfig.base",

  // This is where 'include' belongs: at the root level.
  "include": ["**/*.ts", "**/*.tsx", "src/types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "supabase/functions/**/*"
  ],

  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "types": ["react-native-reanimated", "node", "jest", "@notionhq/client"],
    "skipLibCheck": true,
    "isolatedModules": true
  }
}
